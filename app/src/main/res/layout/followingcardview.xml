<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardCornerRadius="7dp"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:id="@+id/followers_card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/cardbackground"
        >
        <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/img"
            android:layout_width="130dp"
            android:layout_height="140dp"
            map:liteMode="true"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
             />

        <View
            android:layout_width="2dp"
            android:background="#cbf3f5"
            android:id="@+id/ln"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="7dp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ln"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spot"
                    android:layout_marginLeft="12dp"
                    android:text="Match Sport :"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loca"
                    android:layout_below="@+id/spot"
                    android:layout_marginLeft="12dp"
                    android:text="Time :"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datee"
                    android:layout_below="@+id/loca"
                    android:layout_marginLeft="12dp"
                    android:text="Date :"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/place"
                    android:layout_below="@+id/datee"
                    android:layout_marginLeft="12dp"
                    android:text="Place :"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/spot"
                    android:id="@+id/sportvalue"
                    android:layout_marginLeft="12dp"
                    android:text="sport"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loca"
                    android:id="@+id/locationvalue"
                    android:layout_below="@+id/sportvalue"
                    android:layout_marginLeft="12dp"
                    android:text="time "
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loca"
                    android:id="@+id/datevalue"
                    android:layout_below="@+id/locationvalue"
                    android:layout_marginLeft="12dp"
                    android:text="date"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loca"
                    android:id="@+id/placevalue"
                    android:layout_below="@+id/datevalue"
                    android:layout_marginLeft="12dp"
                    android:text="Place"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locca"
                    android:layout_below="@+id/place"
                    android:layout_marginLeft="12dp"
                    android:text="creator_Key:"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loca"
                    android:id="@+id/creatormatchvalue"
                    android:layout_below="@+id/placevalue"
                    android:layout_marginLeft="60dp"
                    android:text="key"
                    android:textColor="@color/baserealseColor"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>