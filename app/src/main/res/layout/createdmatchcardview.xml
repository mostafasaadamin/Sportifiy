<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    app:cardCornerRadius="7dp"
    android:layout_margin="10dp"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/cardbackground"
        >
        <ImageView
            android:layout_height="wrap_content"
            android:id="@+id/img"
            android:layout_width="145dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/navegationbarback"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img"
            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        >

    <View
            android:layout_width="2dp"
            android:background="#cbf3f5"
            android:id="@+id/ln"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ln"
            android:id="@+id/spot"
            android:layout_marginLeft="12dp"
            android:text="Sport :"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ln"
            android:id="@+id/loca"
            android:layout_below="@+id/spot"
            android:layout_marginLeft="12dp"
            android:text="Location :"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ln"
            android:id="@+id/datee"
            android:layout_below="@+id/loca"
            android:layout_marginLeft="12dp"
            android:text="Date :"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ln"
            android:id="@+id/place"
            android:layout_below="@+id/datee"
            android:layout_marginLeft="12dp"
            android:text="Place :"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spot"
            android:id="@+id/sportvalue"
            android:layout_marginLeft="12dp"
            android:text="sport"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/loca"
            android:id="@+id/locationvalue"
            android:layout_below="@+id/sportvalue"
            android:layout_marginLeft="12dp"
            android:text="location"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/loca"
            android:id="@+id/datevalue"
            android:layout_below="@+id/locationvalue"
            android:layout_marginLeft="12dp"
            android:text="date"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/loca"
            android:id="@+id/placevalue"
            android:layout_below="@+id/datevalue"
            android:layout_marginLeft="12dp"
            android:text="Place"
            android:textColor="@color/baserealseColor"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
      </HorizontalScrollView>
    </RelativeLayout>

</android.support.v7.widget.CardView>