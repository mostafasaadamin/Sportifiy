<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.work.unknown.sportifiy.Details.CreateMatch">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/headerback"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Match"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:textColor="#57edc1"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:alpha=".2"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/select"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sport:"
                android:textColor="#57edc1"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"

                ></TextView>
            <Spinner
                android:id="@+id/Sport"
                android:layout_width="270dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:entries="@array/game_type"
                android:layout_below="@+id/select"
                android:layout_centerHorizontal="true"
                android:background="@drawable/searcheditback"
                />
            <TextView
                android:id="@+id/date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date:"
                android:textColor="#57edc1"
                android:textSize="20sp"
                android:layout_below="@+id/Sport"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                ></TextView>
            <EditText
                android:id="@+id/pickdate"
                android:layout_width="270dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp"

                android:paddingLeft="15dp"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"
                android:background="@drawable/searcheditback"
                />
            <TextView
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Time:"
                android:textColor="#57edc1"
                android:textSize="20sp"
                android:layout_below="@+id/pickdate"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                ></TextView>
            <EditText
                android:id="@+id/pickTime"
                android:layout_width="130dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp"

                android:paddingLeft="15dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/time"
                android:background="@drawable/searcheditback"
                />
            <CheckBox
                android:id="@+id/Createflex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flexiable"
                android:textColor="#57edc1"
                android:textSize="10dp"
                android:layout_below="@+id/time"
                android:layout_toRightOf="@+id/pickTime"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="40dp"

                />

            <!--<TextView-->
            <!--android:id="@+id/Location"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:text="Location:"-->
            <!--android:textColor="#57edc1"-->
            <!--android:textSize="20sp"-->
            <!--android:layout_below="@+id/pickTime"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginLeft="60dp"-->
            <!--&gt;</TextView>-->
            <!--<EditText-->
            <!--android:id="@+id/pickocation"-->
            <!--android:layout_width="270dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_height="45dp"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:layout_below="@+id/Location"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/searcheditback"-->
            <!--/>-->

            <TextView
                android:id="@+id/Place"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Place:"
                android:textColor="#57edc1"
                android:textSize="20sp"
                android:layout_below="@+id/Createflex"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                ></TextView>
            <EditText
                android:id="@+id/pickPlace"
                android:layout_width="270dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:layout_below="@+id/Place"
                android:layout_centerHorizontal="true"
                android:background="@drawable/searcheditback"
                />

            <TextView
                android:id="@+id/Note"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Note:"
                android:textColor="#57edc1"
                android:textSize="20sp"
                android:layout_below="@+id/pickPlace"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                ></TextView>
            <EditText
                android:id="@+id/pickNote"
                android:layout_width="270dp"
                android:layout_marginTop="10dp"
                android:layout_height="45dp"
                android:textColor="#57edc1"
                android:paddingLeft="15dp"
                android:layout_below="@+id/Note"
                android:layout_centerHorizontal="true"
                android:background="@drawable/searcheditback"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pickNote"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Create"
                android:textSize="20sp"
                android:textColor="#fff"
                android:id="@+id/mn"
                android:background="@drawable/signupback"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>


